<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pod.PODFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_small">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:boxCornerRadiusTopStart="@dimen/searchbox_corner_radius"
                app:boxCornerRadiusBottomStart="@dimen/searchbox_corner_radius"
                app:boxCornerRadiusTopEnd="@dimen/searchbox_corner_radius"
                app:boxCornerRadiusBottomEnd="@dimen/searchbox_corner_radius"
                android:hint="@string/wiki_search_hint"
                app:helperText="@string/wiki_search_helper"
                app:counterEnabled="true"
                app:counterMaxLength="25"
                app:startIconDrawable="@drawable/ic_wikipedia"
                app:endIconMode="custom"
                app:endIconCheckable="true"
                app:endIconDrawable="@drawable/ic_search" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_input_edit_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <include layout="@layout/chips_layout"
                    android:id="@+id/chips_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/text_input_search"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            <ru.geekbrains.pictureapp.ui.view.SquareImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chips_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="fitCenter"
                tools:srcCompat="@drawable/space_background"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progress_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <include
        layout="@layout/bottom_sheet_layout"
        android:id="@+id/bottom_sheet_container" />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:theme="@style/BottomAppBarOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:hideOnScroll="true"
        app:layout_scrollFlags="scroll|enterAlways"
        app:fabAlignmentMode="center"
        app:fabCradleRoundedCornerRadius="50dp"
        app:menu="@menu/menu_bottom_bar_main"
        app:backgroundTint="@color/design_default_color_primary"
        app:navigationIcon="@drawable/ic_hamburger_menu_bottom_bar" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bottom_app_bar_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/bottom_app_bar"
        app:fabCustomSize="40dp"
        app:backgroundTint="@color/design_default_color_primary_variant"
        app:srcCompat="@drawable/ic_favourite"
        app:tint="@color/white"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>